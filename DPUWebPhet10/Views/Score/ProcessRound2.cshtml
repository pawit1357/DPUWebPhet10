                        </select>

                        <button type="submit" class="button add">
                            ประมวลผล</button>
                    </p>
                    
                    <div class="entry">
                        <div class="sep">
                        </div>
                        <label>
                            เงื่อนไข</label>
                        <label>
                            รางวัลที่ 1		ชื่อรางวัล : รางวัลเหรียญทอง
                        </label>
                        <label>
                            รางวัลที่ 2		ชื่อรางวัล : รางวัลเหรียญเงิน
                        </label>
                        <label>
                            รางวัลที่ 3		ชื่อรางวัล : รางวัลเหรียญทองแดง
                        </label>
                        <label>
                            รางวัลที่ 4 -10	ชื่อรางวัล : รางวัลชมเชย</label>
                            <label>
                            กรณีถ้าเกิด รางวัลที่ 1 หรือ 2 หรือ 3 คะแนนเท่ากัน จะใช้คะแนนรอบเจียระไนเพชรในการพิจารณา
                            </label>
                    </div>
                            

                    <br />
                }
                @if (ViewBag.ResultMsg != null)
                {
                    <div class="n_ok">
                        <p>
                            @ViewBag.ResultMsg
                        </p>
                    </div>
                }
            </div>
        </div>
        <!-- End Content -->
    </div> 
}
