                        $('#menupanel05').css({ visibility: "hidden" });
                    }
                }
            });
            $("#btnLogin").click(function (e) {
                e.preventDefault;

                $('#spinner').show();
                var uname = $("#uname").val();
                var pwd = $("#pwd").val();
                $.post("/Account/CheckLogin", { 'uname': uname, 'pwd': pwd },

                    function (data) {
                        if (data.Success == true) {

                            window.location.href = '/Home';
                        }
                        else {

                            if (cul == 'th') {
                                alert('บัญชีผู้ใช้งานหรือรหัสผ่านไม่ถูกต้อง');
                            } else {
                                alert('The username or password you entered is correct.');
                            }


                        }

                        $('#spinner').hide();
                    });
                return false;
            });



        });

