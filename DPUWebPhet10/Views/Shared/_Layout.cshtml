                    if (e.target.id != 'menupanel04' && e.target.parentNode.id != 'menupanel04' && e.target.id != 'menupanel04-inner' && e.target.parentNode.id != 'menupanel04-inner') {
                        $('#menupanel04').css({ visibility: "hidden" });
                    }
                }
            });




            $('html').click(function (e) {
                if (e.target.id == 'menu05' ||
				      e.target.parentNode.id == 'menu05') {
                    if ($('#menupanel05').css("visibility") == "hidden") {
                        $('#menupanel05').css({ visibility: "visible" });
